{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default build using CUDA",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CUDA_COMPILER": "/opt/cuda/bin/nvcc",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++-13",
                "CMAKE_CUDA_ARCHITECTURES": "75",
                "CMAKE_CUDA_HOST_COMPILER": "/usr/bin/gcc-13",
                "CMAKE_CUDA_FLAGS": "-ccbin /usr/bin/gcc-13 --allow-unsupported-compiler"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        }
    ]
}