{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: nvcc build active file",
            "type": "shell",
            "command": "/usr/local/cuda-12.6/bin/nvcc",
            "args": [
                "-lcublas",
                "-lcudart",
                "-ccbin",
                "/usr/bin/gcc-13.3",
                "${workspaceFolder}/*.cu", // Compile all .cu files in the directory
                "-o",
                "${workspaceFolder}/main", // Output executable
                "-lstdc++",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$nvcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build active CUDA file."
        }
    ]
}